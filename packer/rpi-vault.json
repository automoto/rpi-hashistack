{
  "variables": {
    "preferred_mirror": "{{env `PREFERRED_MIRROR`}}",
    "consul_version": "",
    "vault_version": "",
    "iso_url": "",
    "iso_checksum": "",
    "iso_checksum_type": ""
  },
  "builders": [
    {
      "type": "arm-image",
      "image_type": "raspberrypi",
      "iso_url": "{{user `iso_url`}}",
      "iso_checksum_type": "{{user `iso_checksum_type`}}",
      "iso_checksum": "{{user `iso_checksum`}}",
      "last_partition_extra_size": 128000000
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "environment_vars": [
        "PREFERRED_MIRROR={{user `preferred_mirror`}}",
        "CONSUL_VERSION={{user `consul_version`}}",
        "VAULT_VERSION={{user `vault_version`}}"
      ],
      "scripts": [
        "scripts/before-installation.sh",
        "scripts/install-consul.sh",
        "scripts/install-vault.sh",
        "scripts/after-installation.sh"
      ]
    }
  ]
}